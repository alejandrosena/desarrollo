<%= simple_form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :type %>
  <%= f.input :brand %>
  <%= f.input :serial %>
  <%= f.input :description %>
  <%= f.input :porter_id %>
  <%= f.input :user_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teams_path, :class => 'btn' %>
  </div>
<% end %>
