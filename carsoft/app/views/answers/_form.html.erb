<%= simple_form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :answer %>
  <%= f.input :letter %>
  <%= f.input :question_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                answers_path, :class => 'btn' %>
  </div>
<% end %>
